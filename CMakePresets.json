{
  "version": 10,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 31,
    "patch": 0
  },
  "$comment": "Prometheus CMake Presets",
  "include": [],
  "configurePresets": [
    {
      "hidden": true,
      "name": "base",
      "binaryDir": "${sourceDir}/build/${presetName}"
    },
    {
      "hidden": true,
      "name": "MSVC",
      "generator": "Visual Studio 17 2022",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "PRO_PLATFORM": "MSVC"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Visual Studio"
        },
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ]
        }
      },
      "environment": {
        "VCPKG_ROOT": "${sourceDir}/external/vcpkg",
        "VCPKG_DEFAULT_TRIPLET": "x64-windows-static",
        "PATH": "$env{VCPKG_ROOT}:$penv{PATH}"
      }
    },
    {
      "name": "Release-MSVC",
      "displayName": "Release MSVC Build",
      "description": "Build for Windows x64 in Release mode",
      "inherits": "MSVC",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "Debug-MSVC",
      "displayName": "Debug MSVC Build",
      "description": "Build for Windows x64 in Debug mode",
      "inherits": "MSVC",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ]
}